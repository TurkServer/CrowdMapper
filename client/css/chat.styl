.chat-overview
  height: 172px
  max-height: 172px

.chat-rooms, .room-users
    height: 150px
    max-height: 150px
    overflow: auto

.room-item.deleted
  opacity: 0.4

.action-room-enter
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

.roomScreen
    margin: 0px

.roomScreen form
    margin: 0px

.chat-header
    position: absolute
    width: 100%

.messages
  position: absolute
  width: 100%
  top: 30px
  bottom: 35px
  margin: 0
  padding: 0px

.messages-body
  list-style: none
  margin: 0
  padding: 5px
  height: 100%
  width: 100%

.chat-messaging > form
  position: absolute
  width: 100%
  height: auto
  bottom: 0

.chat-button-container
  float: right

.chat-input-container
  margin-right: 45px
  position: relative

.chat-input.form-control
  width: 100%

.chat-help
  position: absolute
  top: 0
  bottom: 0
  right: 5px
  height: auto
  line-height: 36px

