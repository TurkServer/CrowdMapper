.chat-rooms, .room-users
    height: 150px
    max-height: 150px
    overflow: auto

.action-room-enter
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

.roomScreen
    margin: 0px

.roomScreen form
    margin: 0px

.chat-header
    position: absolute
    width: 100%

// This is a weird hack to position the chat box for now. Alternatively, we should use JS.
.messages
    position: absolute
    width: 100%
    top: 30px
    bottom: 35px
    overflow: auto
    margin: 0px

.messages .mine
    color:green

.chat-input
  position: absolute
  width: auto // to unset default width for inputs
  left: 0
  bottom: 0
  right: 45px

.action-chat-send
  position: absolute
  bottom: 0
  right: 0
