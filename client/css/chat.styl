.chat-rooms, .room-users
    height: 150px
    max-height: 150px
    overflow: auto

.action-room-enter
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

.roomScreen
    margin: 0px

.roomScreen form
    margin: 0px

.chat-header
    position: absolute
    width: 100%

.messages
  position: absolute
  width: 100%
  top: 30px
  bottom: 35px
  margin: 0
  padding: 0px

.messages-body
  list-style: none
  margin: 0
  padding: 5px
  height: 100%
  width: 100%

.chat-messaging > form
  position: absolute
  width: 100%
  height: auto
  bottom: 0

.chat-button-container
  float: right

.chat-input-container
  margin-right: 60px
  position: relative

.chat-input
  width: 100%

.chat-help
  position: absolute
  top: 0
  bottom: 0
  right: -8px
  height: auto
  line-height: 30px

