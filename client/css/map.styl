@import 'nib'

// Fix for bootstrap crapping on openlayers
#map img
    max-width: none

.olControlClickActive
  cursor: crosshair

.olControlLayerSwitcher .layersDiv
  border-radius: 10px 0 0 10px;
  opacity: 0.75;

.olControlLayerSwitcher .layersDiv label
  display: inline // Cancel bootstrap styling

.olControlMousePosition
  color: #b94a48
  font-size: larger !important
  font-weight: bold

// Fixes hover events on vector layer in IE
.olLayerDiv > svg
  pointer-events: all

// HACK: remove the explicit visibility attribute on the vector layer - causes display issues in Firefox
.olLayerDiv > svg > g
  visibility: inherit !important

// Allow tweet tags to extend outside popups
.olPopup
  overflow: visible !important
  border-radius: 5px
  box-shadow 0px 0px 3px 3px rgba(0, 0, 0, 0.3);

.olPopup > div
  overflow: visible !important
  // position: static !important

// One of the hacks below is needed to allow popovers to show outside of popups
.olPopupContent
  overflow: visible !important
  position: static !important
  display: block
  max-width: 300px // Stop the popups from rendering too wide
