svg.viz
  // Charting stuff
  .grid .tick
    stroke: grey
    stroke-dasharray: 2, 2
    opacity: 0.7

  .line
    fill: none
    stroke: steelblue
    stroke-width: 1.5px

  .axis text
    font-size: 150%

  // Graphing stuff
  .node
    stroke: #fff;
    stroke-width: 1.5px;

  .link
    stroke: #999;
    stroke-opacity: .6;

  // Visualizer
  .band
    fill: #dddddd
    stroke: #aaaaaa

  .pie .action
    fill-opacity: 0.50

  // The root node, showing the user's main activity
  .pie .action.root
    fill-opacity: 0.3

  .pie .action.type
    fill-opacity: 1.0

  // Filtering actions
  .action.filter, .action.data-hide
    fill: #d62728

  .action.data-link
    fill: #9467bd

  // Classification actions
  .action.event-edit
    fill: #1f77b4

  .action.classify, .action.event-create, .action.event-update
    fill: #bcbd22

  // Location updates
  .action.event-update.location, .action.event-update.province, .action.event-update.region
    fill: #17becf

  .action.event-save
    fill: #2ca02c

   // Verification actions
  .action.verify, .action.event-vote
    fill: #ff7f0e

  .action.data-move, .action.event-unvote
    fill: #8c564b

  .action.data-unlink, .action.event-delete
    fill: #7f7f7f

  // Chat actions
  .chat
    fill: #e377c2

  .chat.tagged
    stroke: #000000

  .chat.tagged, .chat.undirected
    fill-opacity: 0.50

  path
    fill-rule: evenodd
    stroke: #ffffff

  .outline
    fill: #EEEEEE

  .brush .extent
    stroke: #000;
    fill-opacity: .250;
    shape-rendering: crispEdges;
