@import 'nib'

body
    // padding: 20px 20px 10px;
    padding-bottom: 5px
    overflow: hidden // Don't expand height/width when shit being dragged off screen

blockquote, q
    quotes: none;

blockquote:before, blockquote:after, q:before, q:after
    content: '';
    content: none;

html, body, .fill-parent
  height: 100%
  width: 100%

.flex
  display: flex

.inherit-height
  height: inherit

.fill-height
  height: 100%

.fill-width
  width: 100%

.carrier
  position: relative

.scroll-vertical
  overflow-x: hidden
  overflow-y: auto

.vertical-table
  display: table
  border-spacing: 0px 8px

.vertical-table-row
  display: table-row

.vertical-table-cell
  display: table-cell

// Tweaks to bootstrap classes

.label-inverse
  background-color: #000000

.form-control.input-wide
  width: 300px

.dropdown-info // For non-links in dropdowns
  padding: 3px 20px
  min-width: 240px
