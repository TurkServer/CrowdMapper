@import 'nib'

body
    // padding: 20px 20px 10px;
    padding-bottom: 5px
    overflow: hidden // Don't expand height/width when shit being dragged off screen

blockquote, q
    quotes: none;

blockquote:before, blockquote:after, q:before, q:after
    content: '';
    content: none;

// Works perfectly with the box-sizing above.
html, body, .fill-parent
  height: 100%
  width: 100%

.fill-height
  height: 100%

.fill-width
  width: 100%

.carrier
  position: relative

.scroll-vertical
  overflow-x: hidden
  overflow-y: auto

.vertical-table
  display: table
  border-spacing: 0px 8px

.vertical-table-row
  display: table-row

.vertical-table-cell
  display: table-cell

.label-inverse
  background-color: #000000
