.popout-elements
    padding: 0px
    margin: 0px
    position: absolute
    left: 0px
    right: 0px
    top: 55px
    bottom: 0px

.popout-elements > ul
    padding: 4px
    margin: 0px

.data-filters
    width: 100%

.data-filters > .btn
    padding: 4px 0px
    width: 33.33%

.data-cell
    position: relative
    width: 100%
    overflow: hidden
    margin-bottom: 3px
    border-radius: 5px
    border: 3px dotted #E08E79

.data-cell.bolded
    background: white
    border: 3px solid #69D2E7

.data-cell.dimmed
    opacity: 0.4
    border: 3px dotted #CCCCCC

.data-cell-icon
    position: absolute
    bottom: 0
    right: 0

.data-cell:hover,
.data-cell.ui-draggable-dragging
    opacity: 1
    transform: rotate(-3deg)
    -webkit-transform: rotate(-3deg)
    -moz-transform: rotate(-3deg)
    -ms-transform: rotate(-3deg)
    -o-transform: rotate(-3deg)
    -moz-box-shadow: 8px 8px 5px #666666
    -webkit-box-shadow: 8px 8px 5px #666666
    box-shadow: 8px 8px 5px #666666
    background: white

.data-cell.ui-draggable-dragging
    border: 3px solid #CFF09E
