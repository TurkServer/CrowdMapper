.carrier
    position: relative

.stack > .pages:not(.active)
    visibility: hidden

.pages
    // overflow: hidden // become a BFC (height wrap), no longer relevant
    position: absolute
    top: 62px
    bottom: 0px
    left: 0px
    right: 0px

drop-shadow()
    -webkit-box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);

#editor
    width: 100%
    position: absolute
    top: 30px
    bottom: 0px
    drop-shadow()

#map, #events
    display: block
    border-radius: 4px
    drop-shadow()

newdoc-height = 30px

#doc-list
    position: absolute
    top: 0px
    bottom: newdoc-height + 10px
    left: 0px
    right: 0px

#events
    position: absolute
    top: 35px // 28px header height
    bottom: 0px
    left: 0px
    right: 0px

.events-header.table, .events-body > .table
    margin-bottom: 0

.events-body
    display: block
    height: 100%
    width: 100%;

.table-condensed th.vertical-nopad
    padding-top: 0px
    padding-bottom: 0px

.action-document-new
    position: absolute
    height: newdoc-height
    bottom: 0px

.header-buttons, .header-location
    width: 71px

.tweet-icon-container
    display: inline-block

.chopped
    display: inline-block
    max-width: 160px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis

.center
    float: none
    display: block
    margin-left: auto
    margin-right: auto
