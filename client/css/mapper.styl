@import 'nib'

.stack > .pages:not(.active)
    visibility: hidden

.pages
    // overflow: hidden // become a BFC (height wrap), no longer relevant
    position: absolute
    top: 47px // 42px + 5px bottom margin on the navbar
    bottom: 0px
    left: 0px
    right: 0px

.spinner-container
  display: block
  width: 100%
  height: 100%

table
    border-collapse: collapse;
    border-spacing: 0;
    table-layout: fixed
    // word-wrap: normal
    word-wrap: break-word

@keyframes glow {
  to {
    text-shadow: 0 0 10px red;
  }
}

.notification > a.glowing
  animation: glow .5s infinite alternate;

.user-list
  height: 80px
  max-height: 80px

.chat-overview
  height: 172px
  max-height: 172px

.shadow-outline, #editor
  box-shadow 0px 0px 5px 5px rgba(0, 0, 0, 0.2);

.shadow-outline.highlighted
  box-shadow 0px 0px 150px 100px rgba(0, 0, 0, 0.5);

.guidanceMessage
  color: #FFFFFF
  position: absolute
  top: 0
  width: 100%
  height: auto
  z-index: 1000

#editor
    width: 100%
    position: absolute
    top: 30px
    bottom: 0px

#map, #events
    display: block
    border-radius: 4px

newdoc-height = 30px

#doc-list
    position: absolute
    top: 0px
    bottom: newdoc-height + 10px
    left: 0px
    right: 0px

#events
    position: absolute
    top: 32px // 27px header height
    bottom: 35px // 30px button height
    left: 0px
    right: 0px

.event-create
  position: absolute
  height: 30px
  left: 0px
  bottom: 0px
  right: 0px

.events-header.table, .events-body > .table
    margin-bottom: 0

// Don't allow table headers to wrap - They are also sized small to help with this
.events-header th
    white-space: nowrap

.data-body
  list-style: none

.events-body, .data-body
    display: block
    height: 100%
    width: 100%;

shadow-color = rgba(0,0,0,0.5)
shadow = 14px
-shadow = - shadow
blur = 4px
spread = -10px

tr.selected > td
    box-shadow:
        0 shadow blur spread shadow-color inset,
        0 -shadow blur spread shadow-color inset

// Since we have to, make the top left and bottom right corners the dark overlapping ones
tr.selected > td:first-child
    box-shadow:
        shadow -shadow blur spread shadow-color inset,
        0 shadow blur spread shadow-color inset

tr.selected > td:last-child
    box-shadow:
        0 -shadow blur spread shadow-color inset,
        -shadow shadow blur spread shadow-color inset

// Make the selected event black
tr.selected .label.label-important
  background-color: #333333

.table-condensed th.vertical-nopad
    padding-top: 0px
    padding-bottom: 0px

.action-document-new
    position: absolute
    height: newdoc-height
    bottom: 0px

.header-num
    width: 45px

.header-buttons, .header-location
    width: 71px

.chopped
  display: inline-block
  font-size: 14px // Esp. necessary to cancel an input-append inheritance
  max-width: 160px
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis

.center
    float: none
    display: block
    margin-left: auto
    margin-right: auto

.clickme
    cursor: pointer

.editable-coord
  display: block
  margin-bottom: 5px
