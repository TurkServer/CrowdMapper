.carrier
    position: relative

.stack > .pages:not(.active)
    visibility: hidden

.pages
    // overflow: hidden // become a BFC (height wrap), no longer relevant
    position: absolute
    top: 62px
    bottom: 0px
    left: 0px
    right: 0px

drop-shadow()
    -webkit-box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);

#editor
    width: 100%
    position: absolute
    top: 30px
    bottom: 0px
    drop-shadow()

#map, #events
    display: block
    border-radius: 4px
    drop-shadow()

newevent-height = 30px

#events, #doc-list
    position: absolute
    top: 0px
    bottom: newevent-height + 10px
    left: 0px
    right: 0px

.action-event-new, .action-document-new
    position: absolute
    height: newevent-height
    bottom: 0px

.header-buttons, .header-location
    width: 71px

.tweet-icon-container
    display: inline-block

.chopped
    display: inline-block
    max-width: 160px
    overflow: hidden
    white-space: nowrap
    text-overflow: ellipsis
