.carrier
    position: relative

.stack > .pages:not(.active)
    visibility: hidden

.pages
    // overflow: hidden // become a BFC (height wrap), no longer relevant
    position: absolute
    top: 62px
    bottom: 0px
    left: 0px
    right: 0px

#editor
    width: 100%
    position: absolute
    top: 30px
    bottom: 0px
    -webkit-box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);

#map, #events
    display: block
    -webkit-box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 5px 5px rgba(0, 0, 0, 0.2);
    border-radius: 4px

.popover-fix
    position: relative
    overflow-x: visible // no dice, doesn't seem to work
    overflow-y: auto

newevent-height = 30px

#events, #doc-list
    position: absolute
    top: 0px
    bottom: newevent-height + 10px
    left: 0px
    right: 0px

.button-newevent, .action-newdoc
    position: absolute
    height: newevent-height
    bottom: 0px

.header-buttons, .header-location
    width: 71px

// Fix for bootstrap crapping on openlayers
#map img
    max-width: none


